<table class="table table-striped">
  <thead>
    <tr>
      <th>  <%= t :book %> </th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= book['book_title'] %>
      </td>
      <td>
      <%= link_to(clean_link(book['link']), target: '_blank') do %> <%= fa_icon "book 2x" %> <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
